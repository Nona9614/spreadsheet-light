{
    "check-leaks": true,
    "extensions": [
        "ts",
        "tsx"
    ],
    "spec": [
        "tests/**/*.spec.*"
    ],
    "watch-files": [
        "src"
    ],
    "node-option": [
        "experimental-specifier-resolution=node",
        "import=tsx/esm",
        "trace-uncaught"
    ]
}